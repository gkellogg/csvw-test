!!! 5
%html{lang: "en", "ng-app" => locals[:angular_app]}
  %head
    %meta{charset: "utf-8"}
    %meta{"http-equiv" => "Content-Type", content: "text/html;charset=utf-8"}
    %meta{name: "viewport", content: "width=device-width, initial-scale=1"}
    %title= settings.app_name
    %link{rel: :stylesheet, href: "//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css"}
    %link{rel: :stylesheet, href: "//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap-theme.min.css"}
    != css :app
    %script{src: "//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"}
    %script{src: "//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"}
    %script{src: "//cdnjs.cloudflare.com/ajax/libs/underscore.js/1.6.0/underscore.js"}
    %script{src: "//ajax.googleapis.com/ajax/libs/angularjs/1.2.1/angular#{'.min' if settings.production?}.js"}
    %script{src: "//ajax.googleapis.com/ajax/libs/angularjs/1.2.1/angular-route#{'.min' if settings.production?}.js"}
    %script{src: "//ajax.googleapis.com/ajax/libs/angularjs/1.2.1/angular-resource#{'.min' if settings.production?}.js"}
    %script{id: "processors", type: "application/ld+json"}
      != processors
    != js :app
  %body(role="document")
    %div.container
      %header.navbar.navbar-inverse.navbar-fixed-top{role: :navigation}
        %div.navbar-header
          %button.navbar-toggle(type="button" data-toggle="collapse" data-target=".nav-collapse")
            %span.sr-only
              Toggle Navigation
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.navbar-brand{href: url("/")}= settings.app_name
        %nav.navbar-collapse.collapse#main-nav
          %ul.nav.navbar-nav.navbar-right
            %li
              %span.vers
                = CSVWTest::VERSION.to_s
    %div.container#main(role="main")
      = yield
    %footer
      %p
        The CSVW test suite is released under a
        %a{href: "http://creativecommons.org/about/cc0"}
          Creative Commons CC0 Public Domain Dedication
